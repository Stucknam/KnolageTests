<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KnolageTests.Controls"
             x:Class="KnolageTests.Pages.KnowledgeBaseListPage"
             Title="База знаний"
             BackgroundColor="{StaticResource BackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,*"  Padding="12">

        <SearchBar x:Name="SearchBar"
                   Placeholder="Поиск по заголовку, тэгам или содержанию..."
                   TextChanged="OnSearchTextChanged"
                   Grid.Row="0"/>

        <HorizontalStackLayout Spacing="8" HorizontalOptions="Fill" Grid.Row="1">
            <!--<Button Text="Create Article" Clicked="OnCreateArticleClicked" HorizontalOptions="Start" />-->
            <!--<Button Text="Refresh" Clicked="OnRefreshClicked" HorizontalOptions="EndAndExpand" />-->
        </HorizontalStackLayout>

        <CollectionView x:Name="ArticlesCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        EmptyView="No articles yet"
                        ItemsLayout="VerticalList"
                        Grid.Row="2"
                        >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,6" >
                        <controls:ArticleCard
                            InputTransparent="True"
                            Title="{Binding Title}"
                            Description="{Binding Subtitle}"
                            ImageSource="{Binding ThumbnailPath}"
                            Tags="{Binding Tags}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KnolageTests.Controls"
             x:Class="KnolageTests.Pages.KnowledgeBaseListPage"
             Title="База знаний">

    <VerticalStackLayout Padding="12" Spacing="10">

        <SearchBar x:Name="SearchBar"
                   Placeholder="Search by title, subtitle, tags or text..."
                   TextChanged="OnSearchTextChanged" />

        <HorizontalStackLayout Spacing="8" HorizontalOptions="Fill">
            <!--<Button Text="Create Article" Clicked="OnCreateArticleClicked" HorizontalOptions="Start" />-->
            <!--<Button Text="Refresh" Clicked="OnRefreshClicked" HorizontalOptions="EndAndExpand" />-->
        </HorizontalStackLayout>

        <CollectionView x:Name="ArticlesCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        EmptyView="No articles yet"
                        ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0">
                        <controls:ArticleCard
                            Title="{Binding Title}"
                            Description="{Binding Subtitle}"
                            ImageSource="{Binding ThumbnailPath}"
                            Tags="{Binding Tags}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
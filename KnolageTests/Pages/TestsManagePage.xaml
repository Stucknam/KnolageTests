<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnolageTests.Pages.TestsManagePage"
             Title="Управление тестами"
             BackgroundColor="{StaticResource BackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="12" >

        <SearchBar x:Name="SearchBar"
                   Placeholder="Поиск тестов по названию или описанию..."
                   TextChanged="OnSearchTextChanged"
                   Grid.Row="0"/>

        <HorizontalStackLayout Spacing="8" Grid.Row="1" Margin="6,6">
            <Button ImageSource="ic_fluent_add_circle_24_filled.png" HeightRequest="40" BackgroundColor="{StaticResource PrimaryColor}" Clicked="OnCreateClicked" HorizontalOptions="Start" />
            <Button ImageSource="ic_fluent_arrow_sync_24_filled.png" HeightRequest="40" BackgroundColor="{StaticResource SecondaryColor}" Clicked="OnRefreshClicked" HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>

        <CollectionView x:Name="ManageCollectionView"
                        ItemsLayout="VerticalList"
                        SelectionMode="None"
                        EmptyView="Тестов пока нет"
                        Grid.Row="2">
            
            <CollectionView.ItemTemplate >
                <DataTemplate>
                    <Grid Margin="0,0,0,6" >
                        <Frame CornerRadius="6" Padding="8" Margin="0,0,0,12" HasShadow="True" BackgroundColor="{StaticResource SurfaceColor}">
                            <VerticalStackLayout Spacing="10">
                                <VerticalStackLayout Spacing="4" HorizontalOptions="FillAndExpand" >
                                    <Label Text="{Binding Test.Title}" FontAttributes="Bold" LineBreakMode="WordWrap" />
                                    <Label Text="{Binding Test.Description}" FontSize="14" TextColor="Gray" LineBreakMode="WordWrap" />
                                    <Label Text="{Binding Test.Questions.Count, StringFormat='Вопросов: {0}'}"  FontSize="14" TextColor="Gray" />

                                    <FlexLayout BindableLayout.ItemsSource="{Binding ArticleTitles}" Direction="Row" Wrap="Wrap" AlignItems="Center" Margin="0,6,0,0">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <Frame Padding="6,2" CornerRadius="12" BackgroundColor="#EEE" HasShadow="False" Margin="0,0,6,6">
                                                    <Label Text="{Binding .}" FontSize="12" TextColor="#333" />
                                                </Frame>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </FlexLayout>
                                </VerticalStackLayout>

                                <HorizontalStackLayout Spacing="6" HorizontalOptions="Start">
                                    <Button ImageSource="ic_fluent_edit_24_filled.png" HeightRequest="40" Text="Редактировать" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" Clicked="OnEditClicked" CommandParameter="{Binding Test}" />
                                    <Button ImageSource="ic_fluent_delete_24_filled.png" HeightRequest="40" Text="Удалить" BackgroundColor="{StaticResource ErrorColor}" TextColor="White" Clicked="OnDeleteClicked" CommandParameter="{Binding Test}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
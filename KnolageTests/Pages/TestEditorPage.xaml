<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnolageTests.Pages.TestEditorPage"
             Title="Редактирование теста"
			 BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Заголовок" FontAttributes="Bold" />
            <Entry x:Name="TitleEntry" Placeholder="Enter test title" />

            <Label Text="Описание" FontAttributes="Bold" />
            <Editor x:Name="DescriptionEditor" HeightRequest="100" />

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,8" />

            <Label Text="Выберите статьи для добавления теста" FontAttributes="Bold" />
            <VerticalStackLayout x:Name="ArticlesContainer" Spacing="6" />

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,8" />

            <Label Text="Вопросы" FontAttributes="Bold" />
            <VerticalStackLayout x:Name="QuestionsContainer" Spacing="8" />

            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                <Button ImageSource="ic_fluent_add_circle_24_filled.png" HeightRequest="40" Text="Добавить вопрос" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" Clicked="OnAddQuestionClicked" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,8" />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button ImageSource="ic_fluent_save_24_filled.png" HeightRequest="40" Text="Сохранить" Clicked="OnSaveClicked" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" />
                <Button ImageSource="ic_fluent_backspace_24_filled.png" Text="Отмена" TextColor="White" BackgroundColor="{StaticResource ErrorColor}" Clicked="OnCancelClicked" HeightRequest="40" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
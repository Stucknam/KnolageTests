<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KnolageTests.Controls"
             x:Class="KnolageTests.Pages.KnowledgeBaseManagePage"
             Title="Управление статьями">

    <VerticalStackLayout Padding="12" Spacing="8">

        <SearchBar
        x:Name="SearchBar"
        Placeholder="Поиск..."
        TextChanged="OnSearchTextChanged"
        Grid.Row="0" />

        <HorizontalStackLayout Spacing="8">
            <Button Text="Refresh" Clicked="OnRefreshClicked" HorizontalOptions="Start" />
            <Button Text="Create Article" Clicked="OnCreateClicked" HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>

        <CollectionView x:Name="ManageCollectionView"
                        ItemsLayout="VerticalList"
                        SelectionMode="None"
                        EmptyView="No articles found">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="8" Spacing="10">
                        <controls:ArticleCard
                            Title="{Binding Title}"
                            Description="{Binding Subtitle}"
                            ImageSource="{Binding ThumbnailPath}"
                            Tags="{Binding Tags}"
                            HorizontalOptions="FillAndExpand" />
                            <HorizontalStackLayout x:Name="actions"
                                                Spacing="10">
                                <Button Text="Edit"
                                        WidthRequest="80"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnEditClicked" />

                                <Button Text="Delete"
                                        WidthRequest="80"
                                        BackgroundColor="IndianRed"
                                        TextColor="White"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnDeleteClicked" />
                            </HorizontalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
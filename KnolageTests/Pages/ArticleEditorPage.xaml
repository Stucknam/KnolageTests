<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnolageTests.Pages.ArticleEditorPage"
             Title="Article Editor">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Title" FontAttributes="Bold" />
            <Entry x:Name="TitleEntry" Placeholder="Enter title" />

            <Label Text="Subtitle" FontAttributes="Bold" />
            <Entry x:Name="SubtitleEntry" Placeholder="Enter subtitle" />

            <Label Text="Thumbnail path" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8">
                <Entry x:Name="ThumbnailEntry" Placeholder="Path or URL" HorizontalOptions="FillAndExpand" />
                <Button Text="Pick" Clicked="OnPickThumbnailClicked" />
            </HorizontalStackLayout>

            <Label Text="Tags (comma separated)" FontAttributes="Bold" />
            <Entry x:Name="TagsEntry" Placeholder="tag1, tag2, tag3" />

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,8" />

            <Label Text="Blocks" FontAttributes="Bold" />
            <VerticalStackLayout x:Name="BlocksContainer" Spacing="8" />

            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,8,0,0">
                <Button Text="Add Header" Clicked="OnAddHeaderClicked" />
                <Button Text="Add Paragraph" Clicked="OnAddParagraphClicked" />
                <Button Text="Add Image" Clicked="OnAddImageClicked" />
                <Button Text="Add List" Clicked="OnAddListClicked" />
                <Button Text="Add Quote" Clicked="OnAddQuoteClicked" />
                <Button Text="Add Divider" Clicked="OnAddDividerClicked" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,8" />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="#2196F3" TextColor="White" />
                <Button Text="Cancel" Clicked="OnCancelClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnolageTests.Pages.ArticleEditorPage"
             Title="Article Editor"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Название" FontAttributes="Bold" />
            <Entry x:Name="TitleEntry" Placeholder="Enter title" />

            <Label Text="Описание" FontAttributes="Bold" />
            <Entry x:Name="SubtitleEntry" Placeholder="Enter subtitle" />

            <Label Text="Превью картинка" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8">
                <Image x:Name="ThumbnailImage"
                   HeightRequest="120"
                   Aspect="AspectFill"
                   Margin="0,0,0,8" />
                <Button Text="Выбрать" Clicked="OnPickThumbnailClicked" />
            </HorizontalStackLayout>

            <Label Text="Тэги (Через запятую)" FontAttributes="Bold" />
            <Entry x:Name="TagsEntry" Placeholder="tag1, tag2, tag3" />

            <BoxView HeightRequest="1" Margin="0,8" />

            <Label Text="Блоки" FontAttributes="Bold" />
            <VerticalStackLayout x:Name="BlocksContainer" Spacing="8" />

            <Button ImageSource="ic_fluent_add_circle_24_filled.png"
                    HeightRequest="40"
                    WidthRequest="120"
                    Clicked="OnAddBlockClicked"
                    BackgroundColor="{StaticResource PrimaryColor}" />

            <BoxView HeightRequest="1" Margin="0,8" />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button ImageSource="ic_fluent_save_24_filled.png"
                        HeightRequest="40"
                        Text="Сохранить"
                        Clicked="OnSaveClicked"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        TextColor="White" />

                <Button ImageSource="ic_fluent_backspace_24_filled.png"
                        HeightRequest="40"
                        Text="Омена"
                        Clicked="OnCancelClicked"
                        BackgroundColor="{StaticResource ErrorColor}"
                        TextColor="White" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>